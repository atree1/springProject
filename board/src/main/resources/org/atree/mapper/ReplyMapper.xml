<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.atree.mapper.ReplyMapper">

	<select id="read" resultType="org.atree.domain.ReplyVO">
		select *
		from tbl_reply
		where
		rno=${rno}

	</select>
	<insert id="create">
		insert into
		tbl_reply(bno,reply,replyer)
		values(#{bno},#{reply},#{replyer})
	</insert>

	<select id="getList" resultType="org.atree.domain.ReplyVO">

		select *
		from tbl_reply
		where  deleted='N'
		order
		by
		rno asc 
	</select>
	
	<select id="count" resultType="integer">

		select count(*)
		from tbl_reply
		where rno>0
	</select>

	<update id="update">
		update tbl_reply
		set reply=#{reply},
		updatedate=now()
		where
		rno=#{rno}
	</update>

	<update id="delete">
		update tbl_reply
		set deleted='Y' where rno=#{rno}

	</update>
</mapper>

